# OnchainKit API Key (for Coinbase SDK features)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# Smart Contract Configuration
# After deploying the escrow contract, add the contract address here
# Leave empty or set to 0x0000000000000000000000000000000000000000 to disable escrow features
NEXT_PUBLIC_ESCROW_CONTRACT_ADDRESS=

# Optional: Onchain bill metadata registry (for short share links)
NEXT_PUBLIC_BILL_METADATA_CONTRACT_ADDRESS=

# Deployment Configuration (for deployment scripts only, not used by frontend)
# PRIVATE_KEY=your_private_key_without_0x_prefix
# BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
# BASESCAN_API_KEY=your_basescan_api_key_for_verification
